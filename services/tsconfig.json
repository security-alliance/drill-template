{
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "package.json",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}